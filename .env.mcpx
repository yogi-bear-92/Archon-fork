# Lunar MCPX Gateway Environment Configuration
# This file contains environment variables specific to the MCPX Docker deployment

# MCPX Control Plane Configuration
MCPX_CONTROL_PLANE_PORT=8090
MCPX_GATEWAY_PORT=8050
MCPX_DEBUG=false
MCPX_AGGREGATION_STRATEGY=priority-based
MCPX_HEALTH_CHECK_INTERVAL=30000
MCPX_CIRCUIT_BREAKER_ENABLED=true

# Service Discovery for Docker Compose
SERVICE_DISCOVERY_MODE=docker_compose

# Archon Service Configuration (Docker hostnames)
ARCHON_SERVER_HOST=archon-server
ARCHON_SERVER_PORT=8181
ARCHON_MCP_HOST=archon-mcp
ARCHON_MCP_PORT=8051

# Claude Flow Configuration
CLAUDE_FLOW_HOST=archon-claude-flow
CLAUDE_FLOW_PORT=8053
CLAUDE_FLOW_ENABLED=true

# Service Enable/Disable Flags
SERENA_ENABLED=true
FLOW_NEXUS_ENABLED=false

# Logging and Monitoring
LOG_LEVEL=INFO
NODE_ENV=production

# Resource Limits (for container optimization)
MCPX_MAX_MEMORY=256MB
MCPX_CACHE_SIZE=64MB
MCPX_LOG_RETENTION=24h

# Health Check Configuration
MCPX_HEALTH_CHECK_TIMEOUT=15s
MCPX_HEALTH_CHECK_RETRIES=3
MCPX_STARTUP_TIMEOUT=60s

# Performance Tuning
MCPX_CONCURRENT_REQUESTS=50
MCPX_REQUEST_TIMEOUT=30s
MCPX_KEEPALIVE_TIMEOUT=5s